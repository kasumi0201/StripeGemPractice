<%= form_with(model: candy, local: true) do |form| %>
  <% if candy.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(candy.errors.count, "error") %> prohibited this candy from being saved:</h2>

      <ul>
      <% candy.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :candy_name %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.hidden_field :image, value: @candy.cached_image_data if defined?(@candy.cached_image_data) %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, id: :candy_price %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :candy_description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
